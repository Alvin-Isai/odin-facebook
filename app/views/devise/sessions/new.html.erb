<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-4">
				<h2 class="title is-2">Log in</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            
            <div class="field">
              <div class='control'>
                <%= f.label :email, class: "label" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", wrapper: false, class: "label" %>
              </div>
            </div>

            <div class="field">
              <div class='control'>
                <%= f.label :password, class: "label"  %><br />
                <%= f.password_field :password, autocomplete: "current-password",  wrapper: false, class: "label"  %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <div class='control'>
                  <%= f.check_box :remember_me, class: "label"  %>
                  <%= f.label :remember_me, class: "label"  %>
                </div>
              </div>
            <% end %>

            <div class="actions">
              <div class='control'>
                <%= f.submit "Log in", class:"button is-info is-medium" %>
              </div>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>