<article class="media">
  
  <figure class="media-left">
    <p class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/128x128.png">
    </p>
  </figure>
  
  <div class="media-content">
    <div class="content">
      <p>
        <strong><%= comment.user.profile.fname + ' ' + comment.user.profile.lname %></strong>
        <br>
        <%= comment.comment %>
        <br>
        <small>
          <% if current_user == comment.user %>
            <%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %><br><br>
          <% end %>
        </small>
      </p>
    </div>
  </div>
</article>

  
